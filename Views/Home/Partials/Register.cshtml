@model YellowTail.Models.NewUser 
<h2>Register</h2>
<!-- tag helpers assigned in viewimports NEEDED -->
<!-- asp controller listed as home with a post method action is register on routes -->
<!-- tags tell you which action and validation form is for -->
<form method="POST" asp-controller="Home" asp-action="Register">
    <div class="form-group">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName">
        </div>
        <div class="form-group">
        <span asp-validation-for="LastName"></span>
        <label asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName">
        </div>
        <div class="form-group">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
    </div>
        <div class="form-group">
        <span asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password">
    </div>
        <div class="form-group">
        <span asp-validation-for="Confirm"></span>
        <label asp-for="Confirm"></label>
        <input class="form-control" asp-for="Confirm">
    </div>
    <input type="submit" value="Register">
</form>